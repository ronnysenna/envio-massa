datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int        @id @default(autoincrement())
    username  String     @unique
    password  String
    createdAt DateTime   @default(now())
    contacts  Contact[]
    images    Image[]
    selection Selection?
}

model Contact {
    id        Int      @id @default(autoincrement())
    nome      String
    telefone  String   @unique
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Image {
    id        Int      @id @default(autoincrement())
    url       String
    filename  String
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
}

model Selection {
    id          Int      @id @default(autoincrement())
    user        User     @relation(fields: [userId], references: [id])
    userId      Int      @unique
    selectedIds Json
    updatedAt   DateTime @updatedAt
}
