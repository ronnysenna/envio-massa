generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id           Int            @id @default(autoincrement())
  nome         String
  telefone     String         @unique
  userId       Int
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  email        String?
  User         User           @relation(fields: [userId], references: [id])
  ContactGroup ContactGroup[]
}

model ContactGroup {
  id        Int      @id @default(autoincrement())
  contactId Int
  groupId   Int
  createdAt DateTime @default(now())
  Contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  Group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([contactId, groupId])
}

model Group {
  id           Int            @id @default(autoincrement())
  nome         String
  descricao    String?
  userId       Int
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  ContactGroup ContactGroup[]
  User         User           @relation(fields: [userId], references: [id])

  @@unique([userId, nome])
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  filename  String
  userId    Int
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Selection {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  selectedIds Json
  updatedAt   DateTime
  User        User     @relation(fields: [userId], references: [id])
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  createdAt DateTime   @default(now())
  role      String     @default("user")
  Contact   Contact[]
  Group     Group[]
  Image     Image[]
  Selection Selection?
}
